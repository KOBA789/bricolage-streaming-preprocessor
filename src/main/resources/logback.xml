<configuration>
  <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%t] %5level: %logger{20}: %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.tasknotes.slf4j" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="consoleAppender" />
  </root>
</configuration>
